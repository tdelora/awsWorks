#!/usr/bin/env python3
import sys
import argparse
import aws_kpc, aws_icc

exitBeforeCreate = False
keyPairName = "notSet"

parser = argparse.ArgumentParser()
parser.add_argument("-k","--keyPair", help="The keyPair to use for the instance",type=str,required=True)
args = parser.parse_args()

keyPairName = args.keyPair

returnValue = aws_kpc.aws_kp_check(keyPairName)

if returnValue == "create":
	if ( aws_kpc.aws_kp_create(keyPairName) == 0 ):
		exitBeforeCreate = True
elif returnValue == "quit":
	exitBeforeCreate = True
else:
	print("keypair " + keyPairName + " exists")

if ( exitBeforeCreate ):
	print(sys.argv[0] + " : exiting")
	quit()

instance = aws_icc.aws_create_instance('ami-0e65ed16c9bf1abc7','t2.micro',keyPairName)
print(instance[0].id)

"""
ec2 = boto3.client('ec2')
response = ec2.describe_instances()
print(response)
"""

quit()
